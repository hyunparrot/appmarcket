<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/iconItemCardView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="300dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08">


        <ImageView
            android:id="@+id/sellImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/sample1" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/productName"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:text="산진 한달된 선풍기 팝니다"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iconItemCardView"
        app:layout_constraintTop_toTopOf="@+id/iconItemCardView" />


    <TextView
        android:id="@+id/productAd"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:hint="서울 서대문구 창천동"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iconItemCardView"
        app:layout_constraintTop_toBottomOf="@+id/productName" />


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="10,000"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/productAd"
        app:layout_constraintStart_toStartOf="@+id/productAd"
        app:layout_constraintTop_toBottomOf="@+id/productAd" />




    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iconItemCardView" />

    <LinearLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/chat"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="fitXY"
            android:gravity="center"
            app:srcCompat="@drawable/chat" />

        <TextView
            android:id="@+id/chatCount"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:text="32" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="7dp"
            android:gravity="center"
            app:srcCompat="@drawable/heart" />

        <TextView
            android:id="@+id/heartCount"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:text="24" />


    </LinearLayout>


